@if (show)
{
	<div class="modal fade show" id="myModal" style=" display: block; margin-top:50px">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">@Title</h4>
					<button type="button" class="close" data-dismiss="modal" @onclick="Cancel">&times;</button>
				</div>
				<div class="modal-body" style="height:50vh; overflow:auto;">
					@ChildContent
				</div>
				<div class="modal-footer">
					<CoreButton IsDefaultButton=true OnClick="Close" Text="Close" />
					@* <button type="button" class="btn btn-primary" data-dismiss="modal" @onclick="Close">Close</button> *@
				</div>
			</div>
		</div>
	</div>
	<div class="modal-backdrop fade show"></div>
}