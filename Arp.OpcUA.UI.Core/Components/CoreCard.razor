<MudCard>
	@if (Header != null)
	{
		<MudCardHeader>
			@Header
		</MudCardHeader>
	}
	@if (Content != null)
	{
		<MudCardContent>
			@Content
		</MudCardContent>
	}
	@if (Actions != null)
	{
		<MudCardActions>
			@Actions
		</MudCardActions>
	}
</MudCard>

@code {

	[Parameter]
	public RenderFragment Header { get; set; }
	[Parameter]
	public RenderFragment Content { get; set; }
	[Parameter]
	public RenderFragment Actions{ get; set; }
}